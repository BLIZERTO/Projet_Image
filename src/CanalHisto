import fr.unistra.pelican.Image;
import fr.unistra.pelican.algorithms.io.ImageLoader;

public class CanalHisto {
    double[] cRouge;
    double[] cBleu;
    double[] cVert;
    Image image;
    String nomImage;
    String lien;

    public CanalHisto(String nomImage,String lien) {
        this.lien=lien;
        this.image=ImageLoader.exec(lien);
        getCanalHisto(image);
    }

    public void getCanalHisto(Image image) {

        if (image.getBDim() > 2) {
            cVert = PartieI.getHisto(image, 1);
            cBleu = PartieI.getHisto(image, 2);
        }
        cRouge = PartieI.getHisto(image, 0);
    }

    public Image getImage(){return image;}
    public double[] getCRouge() {
        return cRouge;
    }

    public double[] getCVert() {
        return cVert;
    }

    public double[] getCBleu() {
        return cBleu;
    }

    public void setcRouge(double[] cRouge) {
        this.cRouge = cRouge;
    }

    public void setcBleu(double[] cBleu) {
        this.cBleu = cBleu;
    }

    public void setcVert(double[] cVert) {
        this.cVert = cVert;
    }

    public void setImage(Image image) {
        this.image = image;
    }


}


